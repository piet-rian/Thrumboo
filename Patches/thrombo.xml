<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <!-- be packed animal -->
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName = "Thrumbo"]/race</xpath>
        <value>
            <packAnimal>true</packAnimal>
        </value>
    </Operation>

    <!-- be clean -->
    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="Thrumbo"]/statBases/FilthRate</xpath>
        <value>
            <FilthRate>1</FilthRate>
        </value>
    </Operation>


    <!-- be wet -->
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="Thrumbo"]/statBases</xpath>
        <value>
            <Flammability>0.3</Flammability>
        </value>
    </Operation>

    <!-- be ranged -->
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="Thrumbo"]</xpath>
        <value>
            <verbs>
                <li>
                    <verbClass>Verb_Shoot</verbClass>
                    <accuracyTouch>0.66</accuracyTouch>
                    <accuracyShort>0.77</accuracyShort>
                    <accuracyMedium>0.66</accuracyMedium>
                    <accuracyLong>0.54</accuracyLong>
                    <hasStandardCommand>true</hasStandardCommand>
                    <defaultProjectile>Bullet_MiniShotgun</defaultProjectile>
                    <warmupTime>1</warmupTime>
                    <noiseRadius>2</noiseRadius>
                    <burstShotCount>1</burstShotCount>
                    <ticksBetweenBurstShots>0</ticksBetweenBurstShots>
                    <!--minRange>1</minRange-->
                    <range>25.9</range>
                    <soundCast>BulletImpact_Wood</soundCast>
                    <soundCastTail>GunTail_Heavy</soundCastTail>
                </li>
            </verbs>
        </value>
    </Operation>
</Patch>
